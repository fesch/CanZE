<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lu.fisch.canze.activities.ClimaTechActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="@string/label_EngineFanSpeed" />

            <TextView
                android:id="@+id/text_EFS"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textLabel_climatePower"
                android:layout_weight="0.7"
                android:width="0dp" />


            <TextView
                android:id="@+id/text_ClimatePower"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="@string/label_HVCoolingState" />

            <TextView
                android:id="@+id/text_HCS"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>



        <TableRow>

            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="@string/label_HVBatConditioningMode" />

            <TextView
                android:id="@+id/text_HCM"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>



        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Cabin blower speed (%)" />

            <TextView
                android:id="@+id/text_ClimBlowerSpeed"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC Compressor power consumption (W)" />

            <TextView
                android:id="@+id/text_ClimACConsumption"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC State" />

            <TextView
                android:id="@+id/text_ClimACCompressorState"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC Auth" />

            <TextView
                android:id="@+id/text_ClimACCompressorAuth"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC RPM" />

            <TextView
                android:id="@+id/text_ClimACCompressorRPM"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC Voltage (V)" />

            <TextView
                android:id="@+id/text_ClimACCompressorVoltage"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC Temp (째C)" />

            <TextView
                android:id="@+id/text_ClimACCompressorTemp"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC Error Status" />

            <TextView
                android:id="@+id/text_ClimACCompressorError"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="BCB Water Temp (째C)" />

            <TextView
                android:id="@+id/text_BCBWaterTemp"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="BCB Internal temp (%)" />

            <TextView
                android:id="@+id/text_BCBInternalTemp"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="HeatWater Temp (째C)" />

            <TextView
                android:id="@+id/text_HeatWaterTemp"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Heater Setpoint (째C)" />

            <TextView
                android:id="@+id/text_HeaterSetpoint"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Fan Cabin Status" />

            <TextView
                android:id="@+id/text_FanCabinStatus"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="ETS State" />

            <TextView
                android:id="@+id/text_ETSState"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Freon Pressure (mbar)" />

            <TextView
                android:id="@+id/text_FreonPressure"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Freon Pressure Sensor Voltage (V)" />
            <TextView
                android:id="@+id/text_FreonPressureVoltage"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Freon Pressure Sensor" />
            <TextView
                android:id="@+id/text_FreonPressureSensor"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>





        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="AC Interlock State" />

            <TextView
                android:id="@+id/text_ClimACCompressorInterlock"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Fan Activation" />

            <TextView
                android:id="@+id/text_FanActivation"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="0.7"
                android:width="0dp"
                android:text="Engine Fan Speed counter" />

            <TextView
                android:id="@+id/text_EngineFanSpeedCounter"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="end"
                android:text="@string/default_Dash" />
        </TableRow>

    </TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/label_IH_ClimCompPWRStatus"
        android:textStyle="bold" />

    <lu.fisch.canze.widgets.WidgetView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        custom:axisMaxY="7000"
        custom:axisMinY="0"
        custom:backgroundColor="?android:attr/colorBackground"
        custom:colorRanges="[
                    {'sid':'764.6144.107','color':'#008a1d','from':0,'to':1500},
                    {'sid':'764.6144.107','color':'#ffaa17','from':1500,'to':3000},
                    {'sid':'764.6144.107','color':'#FF0000','from':3000,'to':4500},
                    {'sid':'764.6144.107','color':'#cc00ff','from':4500,'to':6000},
                    {'sid':'764.6143.86','color':'#008a1d','from':1,'to':1},
                    {'sid':'764.6143.86','color':'#ffffff','from':2,'to':2}
                    ]"
        custom:fieldSID="764.6144.107,764.6143.86"
        custom:foregroundColor="?android:attr/colorForeground"
        custom:intervals="{
                                   }"
        custom:majorTicks="1000"
        custom:minorTicks="500"
        custom:options="{
                                   '764.6144.107':'gradient',
                                   '764.6143.86':'colorline[6800],dot'
                                }"
        custom:text="@string/label_IH_ClimCompPWRStatus"
        custom:widget="timeplot" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/label_Temperatures"
        android:textStyle="bold" />

    <!-- use widget as filler -->

    <lu.fisch.canze.widgets.WidgetView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        custom:backgroundColor="?android:attr/colorBackground"
        custom:colorRanges="[
                    {'sid':'42e.44','color':'#808080','from':-100,'to':100},
                    {'sid':'764.6121.26','color':'?android:attr/colorForeground','from':-40,'to':100}]"
        custom:fieldSID="764.6143.110,764.6121.26,800.6105.24,42e.44"
        custom:foregroundColor="?android:attr/colorForeground"
        custom:intervals="{
                                   '764.6143.110':10000,
                                   '764.6121.26':10000,
                                   '800.6105.24':2000,
                                   '42e.44':10000
                                   }"
        custom:majorTicks="10"
        custom:axisMaxY="40"
        custom:axisMinY="-10"
        custom:minorTicks="2"
        custom:text="@string/graph_Climatech"
        custom:widget="timeplot" />



    <!-- debug line -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_debug" />

        <TextView
            android:id="@+id/textDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_debug" />

    </LinearLayout>

</LinearLayout>