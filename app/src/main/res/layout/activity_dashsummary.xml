<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.bobby.canze.activities.DashSummaryActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TableRow>
                <TextView
                    android:text="@string/label_UserSOC"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal"
                    />
                <TextView
                    android:text=""
                    android:layout_width="20dp"
                    android:layout_weight="1" />
                <TextView
                    android:text="@string/label_AvEner"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textUserSOC"
                    android:text="@string/default_Dash"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal" />
                <TextView
                    android:text="@string/default_DoubleSpace"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/textAvEner"
                    android:text="@string/default_Dash"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal" />
            </TableRow>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="@string/default_DoubleSpace"
                android:layout_weight="1" />


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TableRow>
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                    <TextView
                        android:text="@string/label_Range"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="?attr/colorButtonNormal"
                        />
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/textKMA"
                        android:text="@string/default_Dash"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="?attr/colorButtonNormal"
                        />
                    <TextView
                        android:text="@string/default_DoubleSpace"
                        android:layout_weight="1" />

                </TableRow>





            </TableLayout>























            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="@string/default_DoubleSpace"
                android:layout_weight="1" />

            <TableRow>
                <TextView
                    android:text="@string/label_averageSpeed"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal"
                    />
                <TextView
                    android:text=""
                    android:layout_width="20dp"
                    android:layout_weight="1" />
                <TextView
                    android:text="@string/label_InstantConsumption"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/textRealSpeed"
                    android:text="@string/default_Dash"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal" />
                <TextView
                    android:text="@string/default_DoubleSpace"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/textDCPowerIn"
                    android:text="@string/default_Dash"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:background="?attr/colorButtonNormal" />
            </TableRow>



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="@string/default_DoubleSpace"
                android:layout_weight="1" />












            <TableRow>

                <TextView
                    android:layout_weight="0.7"
                    android:width="0dp"
                    android:text="@string/label_SOH" />

                <TextView
                    android:id="@+id/textSOH"
                    android:layout_weight="0.3"
                    android:width="0dp"
                    android:gravity="end"
                    android:text="@string/default_Dash" />
            </TableRow>



            <TableRow>
                <TextView
                    android:layout_weight="0.7"
                    android:width="0dp"
                    android:text="@string/label_HvTemp" />
                <TextView
                    android:id="@+id/textHvTemp"
                    android:layout_weight="0.3"
                    android:width="0dp"
                    android:gravity="end"
                    android:text="@string/default_Dash" />
            </TableRow>





        </TableLayout>


    </LinearLayout>

    <!-- debug line -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_debug" />

        <TextView
            android:id="@+id/textDebug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_debug" />

    </LinearLayout>

</LinearLayout>