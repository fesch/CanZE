<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="3"
    android:layout_column="1"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:stretchColumns="3"
    tools:context="lu.fisch.canze.fragments.TechnicalFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonChargingTech"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_charge"
                        android:text="@string/button_Charging" />

                    <Button
                        android:id="@+id/buttonDtc"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_attention"
                        android:text="@string/button_DtcReadout" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonChargingGraphs"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_charging_graphs"
                        android:text="@string/button_ChargingGraphs" />

                    <Button
                        android:id="@+id/buttonFirmware"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_firmware"
                        android:text="@string/button_Firmware" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonChargingPrediction"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_prediction"
                        android:text="@string/button_ChargingPrediction" />

                    <Button
                        android:id="@+id/buttonElmTest"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_elm327"
                        android:text="@string/button_ElmTesting" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonChargingHistory"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_charginghist"
                        android:text="@string/button_chargingHistory" />

                    <Button
                        android:id="@+id/buttonAuxBatt"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_auxbat"
                        android:text="@string/button_AuxBatt" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonHeatmapBatcomp"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_batterytemp"
                        android:text="@string/button_HeatmapTemperature" />

                    <Button
                        android:id="@+id/buttonHeatmapCellvoltage"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_lightning"
                        android:text="@string/button_HeatmapVoltage" />

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/buttonRange"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_range"
                        android:text="@string/button_Range" />

                    <Button
                        android:id="@+id/buttonAllData"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_alldata"
                        android:text="@string/button_AllData" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonLeakCurrents"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="0"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_leak"
                        android:text="@string/button_LeakCurrents" />

                    <Button
                        android:id="@+id/buttonTires"
                        style="?android:attr/button"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_column="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/button_tire"
                        android:text="@string/button_Tires"/>

                </TableRow>

            </TableLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar_cyclic1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:visibility="gone" />


    </RelativeLayout>

</LinearLayout>
