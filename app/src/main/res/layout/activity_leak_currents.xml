<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lu.fisch.canze.activities.LeakCurrentsActivity"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <lu.fisch.canze.widgets.WidgetView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                custom:axisMinY="0"
                custom:axisMaxY="5"
                custom:majorTicks="1"
                custom:minorTicks="1"
                custom:fieldSID="793.625057.24"
                custom:widget="timeplot"
                custom:text="@string/label_LeakCurrentDc"
                custom:backgroundColor="?android:attr/colorBackground"
                custom:foregroundColor="?android:attr/colorForeground"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <lu.fisch.canze.widgets.WidgetView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                custom:axisMinY="0"
                custom:axisMaxY="10"
                custom:majorTicks="1"
                custom:minorTicks="1"
                custom:fieldSID="793.62505a.24"
                custom:widget="timeplot"
                custom:text="@string/label_LeakCurrentLf"
                custom:backgroundColor="?android:attr/colorBackground"
                custom:foregroundColor="?android:attr/colorForeground"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <lu.fisch.canze.widgets.WidgetView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                custom:axisMinY="0"
                custom:axisMaxY="500"
                custom:majorTicks="100"
                custom:minorTicks="25"
                custom:fieldSID="793.625059.24"
                custom:widget="timeplot"
                custom:text="@string/label_LeakCurrentHf"
                custom:backgroundColor="?android:attr/colorBackground"
                custom:foregroundColor="?android:attr/colorForeground"
                />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <lu.fisch.canze.widgets.WidgetView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                custom:axisMinY="0"
                custom:axisMaxY="200"
                custom:majorTicks="50"
                custom:minorTicks="10"
                custom:fieldSID="793.625058.24"
                custom:widget="timeplot"
                custom:text="@string/label_LeakCurrentEhf"
                custom:backgroundColor="?android:attr/colorBackground"
                custom:foregroundColor="?android:attr/colorForeground"
                />

        </TableRow>

    </TableLayout>
    <!-- debug line -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        >

        <TextView
            android:text="@string/label_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textDebug"
            android:text="@string/default_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>